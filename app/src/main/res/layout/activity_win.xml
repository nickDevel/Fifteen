<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context="com.andnick.fifteen.Win"
    android:background="#009688">
    <include layout="@layout/action_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/include" />
    <TextView android:text="Победа!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TW"
        android:textSize="40dp"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ходов сделано: "
        android:id="@+id/textView"
        android:layout_marginTop="50dp"
        android:textColor="#010101"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/score"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textColor="#010101" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новая игра"
        android:id="@+id/newGame"
        android:layout_marginTop="46dp"
        android:background="#009688"
        android:textSize="25dp"
        android:textColor="#010101"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/score"
        android:layout_alignEnd="@+id/score" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Рекорд"
        android:id="@+id/textView4"
        android:layout_below="@+id/TW"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/dbscore"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/TW"
        android:layout_alignStart="@+id/TW" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/sizeGame"
        android:layout_below="@+id/TW"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
